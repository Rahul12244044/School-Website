{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "new",
    "pluralName": "news",
    "displayName": "News Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "publishDate": {
      "type": "datetime",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "author": {
      "type": "string",
      "default": "School Admin"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "announcements",
        "events",
        "achievements",
        "academic",
        "sports"
      ],
      "default": "announcements",
      "required": true
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    }
  }
}